        let currentFilter = '';

        function renderEmotions(emotions = emotionDatabase) {
            const grid = document.getElementById('emotionGrid');
            grid.innerHTML = Object.entries(emotions).map(([emotion, data]) => `
                <div class="emotion-card emotion-color-${Math.floor(Math.random() * 5) + 1}" onclick="toggleDetails('${emotion}')">
                    <div class="emotion-header">
                        <span class="emotion-emoji">${data.emoji}</span>
                        <span>${emotion}</span>
                    </div>
                    <div class="phrases-list">
                        ${data.phrases.map(phrase => `
                            <div class="phrase-item">
                                <div class="phrase-kr">${phrase.kr}</div>
                                <div class="phrase-romaji">${phrase.romaji}</div>
                                <div class="phrase-meaning">${phrase.meaning}</div>
                                <div class="context-tags">
                                    ${phrase.tags.map(tag => `<span class="tag">${tag}</span>`).join('')}
                                </div>
                            </div>
                        `).join('')}
                    </div>
                </div>
            `).join('');
        }

        function searchEmotions() {
            const query = document.getElementById('searchInput').value.toLowerCase();
            if (!query) return showAll();
            
            const filtered = {};
            for (let [emotion, data] of Object.entries(emotionDatabase)) {
                if (emotion.toLowerCase().includes(query) || 
                    data.phrases.some(p => p.meaning.toLowerCase().includes(query) || 
                                           p.kr.toLowerCase().includes(query))) {
                    filtered[emotion] = data;
                }
            }
            currentFilter = query;
            renderEmotions(filtered);
            updateStats(`æœå°‹ã€Œ${query}ã€æ‰¾åˆ° ${Object.keys(filtered).length} ç¨®æƒ…ç·’`);
        }

        function showAll() {
            document.getElementById('searchInput').value = '';
            currentFilter = '';
            renderEmotions();
            updateStats('é¡¯ç¤ºå…¨éƒ¨60ç¨®æƒ…ç·’');
        }

        function randomPractice() {
            const emotions = Object.keys(emotionDatabase);
            const randomEmotion = emotions[Math.floor(Math.random() * emotions.length)];
            const randomPhrase = emotionDatabase[randomEmotion].phrases[Math.floor(Math.random() * 8)];
            alert(`ğŸ² éš¨æ©Ÿç‰¹è¨“ï¼š${randomEmotion}\n\nğŸ’¬ ${randomPhrase.kr}\n${randomPhrase.romaji}\n${randomPhrase.meaning}\n\nå ´æ™¯ï¼š${randomPhrase.tags.join(' | ')}\n\nè·Ÿè®€3æ¬¡è©¦è©¦çœ‹ï¼`);
        }

        function quizMode() {
            let score = 0;
            for (let i = 0; i < 10; i++) {
                const emotions = Object.keys(emotionDatabase);
                const randEmotion = emotions[Math.floor(Math.random() * emotions.length)];
                const answer = confirm(`æƒ…ç·’çŒœçŒœæ¨‚ ${i+1}/10\n\nè½ï¼š${emotionDatabase[randEmotion].phrases[0].kr}\n\né€™æ˜¯ã€Œ${randEmotion}ã€å—ï¼Ÿ`);
                if (answer) score++;
            }
            alert(`æ¸¬é©—çµæŸï¼ä½ çš„æƒ…ç·’èªæ„ŸæŒ‡æ•¸ï¼š${Math.round(score/10*100)}%\n\n${score >= 8 ? 'ğŸ‰ éŸ“åŠ‡èªæ„Ÿé«˜æ‰‹ï¼' : score >= 5 ? 'ğŸ‘ é‚„ä¸éŒ¯ï¼Œç»§ç»­ç·´ç¿’ï¼' : 'ğŸ“š å¤šçœ‹å¹¾éƒ¨éŸ“åŠ‡å§ï¼'}`);
            updateStats(`æ¸¬é©—å®Œæˆï¼š${score}/10`);
        }

        function saveProgress() {
            const progress = { date: new Date().toLocaleString('zh-TW'), filter: currentFilter, practiced: 1 };
            localStorage.setItem('emotionMapProgress', JSON.stringify(progress));
            alert('ğŸ’¾ å­¸ç¿’é€²åº¦å·²ä¿å­˜ï¼ä¸‹æ¬¡é–‹å•Ÿæœƒè¨˜ä½ä½ çš„é€²åº¦ã€‚');
        }

        function updateStats(message) {
            document.getElementById('stats').textContent = message;
        }

        // åˆå§‹åŒ–
        renderEmotions();
        updateStats('æ­¡è¿ä½¿ç”¨éŸ“åŠ‡æƒ…ç·’èªæ„Ÿåœ°åœ–ï¼è¼¸å…¥é—œéµå­—é–‹å§‹æœå°‹');
    </script>
